--setup
function _init()
	restart()
end

function restart()
	p={}
	p.anim=set_anim(p,"idle")
	p.x=59
	p.y=59
	p.dx=0
	p.flipx=false
end

function set_anim(p,name)
	local a={ n=name, t=time() }
	
	if name=="idle" then
		a.f0=0	
		a.f1=1 
		a.dt=0.5
	elseif name=="run" then
		a.f0=3 
		a.f1=6 
		a.dt=0.125
	end
	
	p.spr=a.f0
	
	return a
end


