--update
function _update()
	local p=p
	
	--general
	p.dy+=gravity
	p.dx*=friction
	
	--controls
	if p.on_floor and btnp(❎) then
		p.on_floor=false
		p.dy=-p.acc_y
	end
	
	if btn(⬅️) then p.dx-=p.acc_x end
	if btn(➡️) then p.dx+=p.acc_x end
	
	--limits
	if abs(p.dx)<0.1 then p.dx=0 end
	p.dx=mid(-p.max_dx,p.dx,p.max_dx)
	p.dy=mid(-p.max_dy,p.dy,p.max_dy)

	--position
	local old_x,old_y=p.x,p.y
	p.x+=p.dx
	p.y+=p.dy
	
	--collision
	collide_player(p,old_x,old_y)
	
	--animation
	local anim=p.anim.name
	if p.on_floor then
		if p.dx!=0 and anim!="run" then
			set_anim(p, "run")
		elseif p.dx==0 and anim!="idle" then
			set_anim(p, "idle")
		end
	else
		p.anim={ name="none" }
		if p.dy>0 then
			p.spr=10	
		else
			p.spr=8
		end
	end
	
	update_anim(p)
	
	--direction
	if p.dx<0 then
		p.flipx=true
	elseif p.dx>0 then
		p.flipx=false
	end
end

function update_anim(p)
	local a=p.anim
	if a.name=="none" then return end
	if time()-a.t>a.dt then
		a.t=time()
		p.spr+=1
		if p.spr>a.f1 then
			p.spr=a.f0 --wrap around
		end
	end
end
