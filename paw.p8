function restart()
	p={}
	p.x=59
	p.y=59
	p.w=8
	p.h=8
	p.dx=0
	p.dy=0
	p.max_dx=1.5
	p.max_dy=4
	p.acc_x=0.65
	p.acc_y=3
	p.flipx=false
	p.on_floor=false
	set_anim(p,"idle")
end

function set_anim(p,name)
	local a={ name=name, t=time() }
	if name=="idle" then
		a.f0=0
		a.f1=1
		a.dt=0.5
	elseif name=="run" then
		a.f0=3
		a.f1=6
		a.dt=0.125
	end
	p.anim=a
	p.spr=a.f0
end


