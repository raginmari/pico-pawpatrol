--update
function _update()
	update_input(p)
	update_anim(p)
	update_move(p)
end

function update_input(p)
	local name=p.anim.n
	
	if (btn(⬅️) or btn(➡️)) and name!="run" then
		p.anim=set_anim(p,"run")
	elseif btn()==0 and name!="idle" then
		p.anim=set_anim(p,"idle")
	end
	
	if btn(⬅️) then 
		p.flipx=true
		p.dx=-1
	elseif btn(➡️) then
		p.flipx=false
		p.dx=1
	elseif btn()==0 then
		p.dx=0
	end
end

function update_anim(p)
	local a=p.anim
	if time()-a.t>a.dt then
		a.t=time()
		p.spr+=1
		if p.spr>a.f1 then
			p.spr=a.f0
		end
	end
end

function update_move(p)
	if p.dx==0 then return end
	p.x+=p.dx*0.032*32
end
